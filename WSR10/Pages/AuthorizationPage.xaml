<Page x:Class="WSR10.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSR10.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage" Background="#FF76E383">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Логин" Width="90"/>
                <TextBox x:Name="LoginTxtBox" Width="150" Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Пароль" Width="90"/>
                <PasswordBox x:Name="PasswordBox" Width="150" Height="30"/>
            </StackPanel>
            <TextBlock Text="Еще не зарегистрированы?" Width="150" Foreground="#FF498C51" MouseDown="TextBlock_MouseDown"/>
            <Button Content="Войти" Width="150" Height="30" Margin="5" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
